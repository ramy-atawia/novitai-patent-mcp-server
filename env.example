# =============================================================================
# Novitai Patent MCP Server Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# =============================================================================
# Azure OpenAI Configuration
# =============================================================================
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_MODEL_NAME=gpt-4o-mini

# =============================================================================
# Google Search API Configuration
# =============================================================================
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_custom_search_engine_id_here

# =============================================================================
# PatentsView API Configuration
# =============================================================================
PATENTSVIEW_API_KEY=your_patentsview_api_key_here

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_URL=http://localhost:8001
MCP_SERVER_TOKEN=your_mcp_server_token_here
MCP_SERVER_TIMEOUT=30
MCP_SERVER_MAX_RETRIES=3

# =============================================================================
# Internal MCP Server Configuration
# =============================================================================
INTERNAL_MCP_HOST=localhost
INTERNAL_MCP_PORT=8001
INTERNAL_MCP_PATH=/mcp
INTERNAL_MCP_URL=http://localhost:8001/mcp
EXPOSE_MCP_PUBLICLY=false
MCP_PUBLIC_URL=https://mcp-tools.yourdomain.com/mcp

# =============================================================================
# FastAPI Configuration
# =============================================================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8001
FASTAPI_RELOAD=true
FASTAPI_LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_secret_key_here_32_characters_minimum
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS Configuration
# =============================================================================
ALLOWED_ORIGINS=["*"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# Cache Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=true
ENVIRONMENT=development
ENABLE_SWAGGER=true
ENABLE_RELOAD=true

# =============================================================================
# Testing Configuration
# =============================================================================
TESTING=false

# =============================================================================
# External Service URLs
# =============================================================================
GOOGLE_SEARCH_API_URL=https://www.googleapis.com/customsearch/v1
ARXIV_API_URL=http://export.arxiv.org/api/query
IEEE_API_URL=https://ieeexplore.ieee.org/api/v1

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_GOOGLE_SEARCH_ENABLED=true
FEATURE_AZURE_OPENAI_ENABLED=true
FEATURE_DOCUMENT_ANALYSIS_ENABLED=true
FEATURE_WEB_CONTENT_FETCHING_ENABLED=true
FEATURE_MCP_TOOLS_ENABLED=true
FEATURE_AI_SUMMARIZATION_ENABLED=true

# =============================================================================
# Development Tools
# =============================================================================
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_API_DOCUMENTATION=true
ENABLE_TEST_ENDPOINTS=false




