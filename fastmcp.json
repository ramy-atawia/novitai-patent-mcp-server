{
  "$schema": "https://gofastmcp.com/schemas/fastmcp/v1.json",
  "source": {
    "path": "fastmcp_server.py"
  },
  "environment": {
    "python": "3.9",
    "dependencies": [
      "fastmcp>=2.0.0",
      "fastapi>=0.104.1",
      "uvicorn>=0.24.0",
      "langchain>=0.1.0",
      "langchain-openai>=0.0.2",
      "openai>=1.3.0",
      "httpx>=0.25.1",
      "python-dotenv>=1.0.0",
      "structlog>=23.2.0",
      "beautifulsoup4>=4.12.2",
      "lxml>=4.9.3",
      "pandas>=2.1.3",
      "numpy>=1.26.2",
      "pydantic>=2.0.0",
      "pydantic-settings>=2.0.0"
    ]
  },
  "deployment": {
    "transport": "sse",
    "host": "0.0.0.0",
    "port": 8003,
    "log_level": "INFO"
  },
  "server": {
    "name": "Novitai Patent MCP Server",
    "version": "1.0.0",
    "description": "AI-powered patent analysis and search platform with FastMCP",
    "author": "Novitai",
    "capabilities": {
      "tools": true,
      "resources": false,
      "prompts": false
    }
  }
}

